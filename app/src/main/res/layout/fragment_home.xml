                            android:layout_marginBottom="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="15dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onButtonClick">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_exam"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:singleLine="false"
                            android:maxLines="2"
                            android:fontFamily="@font/poppinsregular"
                            android:text="Ujian \nSekolah"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_psbtiga"
                            android:layout_marginBottom="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="15dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onButtonClick">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_perpus"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:singleLine="false"
                            android:maxLines="2"
                            android:fontFamily="@font/poppinsregular"
                            android:text="Perpus \nPesantren"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_psbempat"
                            android:layout_marginBottom="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="15dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onButtonClick">

                            <ImageView
                                android:id="@+id/img_btnIcon4"
                                android:layout_gravity="center"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_history"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/text_btnIcon4"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:singleLine="false"
                            android:maxLines="2"
                            android:fontFamily="@font/poppinsregular"
                            android:text="Transaksi \n"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_slider"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/ahlan" />

            <RelativeLayout
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/news"
                    android:layout_marginHorizontal="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_pesantren"
                    android:fontFamily="@font/poppinsextra"
                    android:layout_marginBottom="1dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/Green"/>

                <View
                    android:layout_below="@+id/news"
                    android:id="@+id/garis"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="9dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/Green"
                    android:layout_height="5dp"/>

