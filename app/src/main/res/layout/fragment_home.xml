<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.29"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/kiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.36"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/kanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imagetop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0703125" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/d1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.21"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/f1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/f2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/kk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.44" />

    <ImageView
        android:id="@+id/img_backgrond"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/photo_news_firdaus"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroud"
        app:layout_constraintBottom_toBottomOf="@+id/prayerTimesContainer"
        app:layout_constraintEnd_toEndOf="@+id/kanan"
        app:layout_constraintStart_toStartOf="@id/kiri"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        android:layout_marginBottom="-23dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="logo ppi"
        android:src="@drawable/ppi259"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.search.SearchBar
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="Cari Informasi"
        android:backgroundTint="@color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/logo"
        app:layout_constraintEnd_toStartOf="@+id/notificationIcon"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="@+id/logo"/>
    <!-- Search bar -->

    <com.google.android.material.search.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:hint="Masukan informasi yang ingin dicari"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"/>
    </com.google.android.material.search.SearchView>



    <RelativeLayout
        android:id="@+id/notificationIcon"
        android:layout_marginEnd="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo"
        app:layout_constraintBottom_toBottomOf="@+id/logo" >
        <ImageView
            android:id="@+id/img_notif"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_notifications_black_24dp"
            app:tint="@color/white" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/bullet_notif"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_bullet">
            <TextView
                android:id="@+id/tv_jlmlh_notif"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="10"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </RelativeLayout>

    </RelativeLayout>
    <!-- Time Text -->
    <TextView
        android:id="@+id/tv_realtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21:35"
        android:textColor="@color/Gading"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintBottom_toTopOf="@+id/dateText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Date Text -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jum'at, 27 September 2024"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/gl1"
        app:layout_constraintEnd_toEndOf="@+id/b2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_realtime"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp" />

    <!-- Prayer Times Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prayerTimesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_jadwal_sholat2"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@+id/tv_realtime"
        app:layout_constraintBottom_toBottomOf="@+id/dateText"
        app:layout_constraintStart_toEndOf="@+id/tv_realtime"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imsak Time -->
        <TextView
            android:id="@+id/imsakTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imsak"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/shubuhTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/imsakTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04.00"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/imsakTime"
            app:layout_constraintStart_toStartOf="@+id/imsakTime"
            app:layout_constraintTop_toBottomOf="@+id/imsakTime"
            android:layout_marginTop="4dp" />

        <!-- Shubuh Time -->
        <TextView
            android:id="@+id/shubuhTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shubuh"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/dzhuhurTime"
            app:layout_constraintStart_toEndOf="@+id/imsakTime"
            app:layout_constraintTop_toTopOf="@+id/imsakTime"/>

        <TextView
            android:id="@+id/shubuhTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04.40"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/shubuhTime"
            app:layout_constraintStart_toStartOf="@+id/shubuhTime"
            app:layout_constraintTop_toBottomOf="@+id/shubuhTime"
            android:layout_marginTop="4dp" />

        <!-- Dzhuhur Time -->
        <TextView
            android:id="@+id/dzhuhurTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dzhuhur"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/asharTime"
            app:layout_constraintStart_toEndOf="@+id/shubuhTime"
            app:layout_constraintTop_toTopOf="@+id/imsakTime"/>

        <TextView
            android:id="@+id/dzhuhurTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.59"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/dzhuhurTime"
            app:layout_constraintStart_toStartOf="@+id/dzhuhurTime"
            app:layout_constraintTop_toBottomOf="@+id/dzhuhurTime"
            android:layout_marginTop="4dp" />

        <!-- Ashar Time -->
        <TextView
            android:id="@+id/asharTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ashar"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/magribTime"
            app:layout_constraintStart_toEndOf="@+id/dzhuhurTime"
            app:layout_constraintTop_toTopOf="@+id/imsakTime"/>

        <TextView
            android:id="@+id/asharTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.20"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/asharTime"
            app:layout_constraintStart_toStartOf="@+id/asharTime"
            app:layout_constraintTop_toBottomOf="@+id/asharTime"
            android:layout_marginTop="4dp" />

        <!-- Magrib Time -->
        <TextView
            android:id="@+id/magribTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maghrib"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/isyaTime"
            app:layout_constraintStart_toEndOf="@+id/asharTime"
            app:layout_constraintTop_toTopOf="@+id/imsakTime"/>

        <TextView
            android:id="@+id/magribTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17.50"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/magribTime"
            app:layout_constraintStart_toStartOf="@+id/magribTime"
            app:layout_constraintTop_toBottomOf="@+id/magribTime"
            android:layout_marginTop="4dp" />

        <!-- Isya Time -->
        <TextView
            android:id="@+id/isyaTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isya"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/magribTime"
            app:layout_constraintTop_toTopOf="@+id/imsakTime" />

        <TextView
            android:id="@+id/isyaTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19.08"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/isyaTime"
            app:layout_constraintStart_toStartOf="@+id/isyaTime"
            app:layout_constraintTop_toBottomOf="@+id/isyaTime"
            android:layout_marginTop="4dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/white"
            app:drawableStartCompat="@drawable/baseline_edit_location_24"
            app:drawableTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/imsakTimeValue"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Hijri Date -->
        <TextView
            android:id="@+id/hijriDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="21 Zhullhijjah 1445 H"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/isyaTimeValue"
            app:layout_constraintTop_toBottomOf="@+id/isyaTimeValue" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_backgrond">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:gravity="center"
